generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatar    String?
  mobile    String?
  user_name String?
  createdAt DateTime @default(now())

  oauthAccounts OAuthAccount[]
  contacts      Contacts[]
}

model OAuthAccount {
  id           String   @id @default(uuid())
  provider     String
  providerId   String
  accessToken  String
  refreshToken String?
  scope        String?
  expiresAt    DateTime?
  createdAt    DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@unique([provider, providerId])
}



model Contacts {
  id            String   @id @default(uuid())
  contactName   String
  mobileNumber  String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String

  createdAt     DateTime @default(now())
}